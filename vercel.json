{
  "rewrites": [
    {
      "source": "/filme/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ],
  "env": {
    "VITE_TMDB_IMAGE_BASE_URL": "https://image.tmdb.org/t/p",
    "VITE_TMDB_IMAGE_SIZE": "w185"
  }
}
